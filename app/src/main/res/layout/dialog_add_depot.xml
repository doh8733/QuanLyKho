<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corner_bg_layout"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add new warehouse"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:fontFamily="@font/sen_extrabold"
        android:layout_marginTop="42dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/tilNameWarehouse"
        app:startIconTint="#28BB8E"
        app:startIconDrawable="@drawable/ic_package"
        app:boxCornerRadiusTopStart="32dp"
        app:boxCornerRadiusBottomEnd="32dp"
        app:boxCornerRadiusBottomStart="32dp"
        app:boxCornerRadiusTopEnd="32dp"
        android:layout_marginHorizontal="28dp"
        android:fontFamily="@font/sen_regular"
        android:hint="Name of warehouse"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/corner_tip_find"
            android:fontFamily="@font/sen_regular"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:startIconTint="#28BB8E"
        app:startIconDrawable="@drawable/ic_number"
        app:boxCornerRadiusTopStart="32dp"
        app:boxCornerRadiusBottomEnd="32dp"
        app:boxCornerRadiusBottomStart="32dp"
        app:boxCornerRadiusTopEnd="32dp"
        android:layout_marginHorizontal="28dp"
        android:fontFamily="@font/sen_regular"
        android:hint="Row"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:fontFamily="@font/sen_regular"
            android:background="@drawable/corner_tip_find" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilFloors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:startIconTint="#28BB8E"
        app:startIconDrawable="@drawable/ic_arrow_up_down"
        app:boxCornerRadiusTopStart="32dp"
        app:boxCornerRadiusBottomEnd="32dp"
        app:boxCornerRadiusBottomStart="32dp"
        app:boxCornerRadiusTopEnd="32dp"
        android:layout_marginHorizontal="28dp"
        android:fontFamily="@font/sen_regular"
        android:hint="Floors"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/sen_regular"
            android:background="@drawable/corner_tip_find"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:id="@+id/tilPosition"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:startIconTint="#28BB8E"
        app:startIconDrawable="@drawable/ic_pos"
        app:boxCornerRadiusTopStart="32dp"
        app:boxCornerRadiusBottomEnd="32dp"
        app:boxCornerRadiusBottomStart="32dp"
        app:boxCornerRadiusTopEnd="32dp"
        android:layout_marginHorizontal="28dp"
        android:fontFamily="@font/sen_regular"
        android:hint="Column"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/sen_regular"
            android:background="@drawable/corner_tip_find"
            />
    </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilDescription"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="16dp"
            app:boxCornerRadiusTopStart="32dp"
            app:boxCornerRadiusBottomEnd="32dp"
            app:boxCornerRadiusBottomStart="32dp"
            app:boxCornerRadiusTopEnd="32dp"
            app:placeholderText="Name of warehouse"
            android:fontFamily="@font/sen_regular"
            android:hint="Description"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >


        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="16dp"
            android:drawableStart="@drawable/ic_arrow_right"
            android:layout_marginLeft="16dp"
            android:drawableTint="#28BB8E"
            android:textAlignment="textStart"
            android:fontFamily="@font/sen_regular"
            android:background="@drawable/corner_tip_find"

            />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreate"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Create"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginHorizontal="26dp"
        android:layout_marginVertical="16dp"
        app:backgroundTint="@null"
        android:background="@drawable/color_btn_create"
        android:animateLayoutChanges="true"
        android:fontFamily="@font/sen_bold"/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:text="Close"
        android:textAlignment="center"
        android:id="@+id/btnClose"
        android:textColor="#969696"
        android:textSize="20sp"
        android:layout_marginHorizontal="26dp"
        app:backgroundTint="@null"
        android:background="@drawable/color_btn_close"
        android:animateLayoutChanges="true"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/sen_bold"
        />

    </LinearLayout>


